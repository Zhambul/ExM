<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/FinancesTheme">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/finances_body"
    android:orientation="vertical"
    android:layout_above="@+id/footer">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarExpense"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/FinancesColorPrimary"
        android:minHeight="?attr/actionBarSize"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_close_white_24dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:id="@+id/finances_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expense"
            android:layout_marginLeft="34dp"
            android:layout_marginBottom="14dp"
            android:textColor="@color/md_white_1000"
            android:textSize="22sp"
            android:id="@+id/finances_label"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_check_white_24dp"
            android:clickable="true"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="186dp"
            android:id="@+id/finances_ok"/>
    </android.support.v7.widget.Toolbar>
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/headerLayout"
        android:background="@color/md_grey_300">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.Category"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginLeftToListFinances"
            android:textColor="@color/md_grey_500"
            android:id="@+id/categoryText"/>
    </RelativeLayout>
    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/finances_list" >
    </ExpandableListView>

</LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/footer"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:id="@+id/money_divider"
            android:background="@color/md_grey_400"
            android:orientation="horizontal">
        </LinearLayout>
        <ExpandableListView
            android:layout_below="@id/money_divider"
            android:elevation="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/moneyList">
        </ExpandableListView>
    </RelativeLayout>
</RelativeLayout>
